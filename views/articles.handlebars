<section id="articles">
    <h1>All articles</h1>

    {{#each articles}}
        <div>
            <h3>{{title}}</h3>
            <p>{{content}}</p>
            <div>
                <small>Author: <span>{{author}}</span></small>
            </div>
        </div>
    {{else}}
        <p>No articles available</p>
    {{/each}}

</section>